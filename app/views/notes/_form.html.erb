<div class="container mx-auto p-4">
  <%= form_with model: note, class: "space-y-6" do |form| %>

    <% if note.errors.any? %>
      <div class="bg-red-100 text-red-700 p-4 rounded-md mb-4 border border-red-300">
        <%= note.errors.full_messages.to_sentence.capitalize %>
      </div>
    <% end %>

    <div class="space-y-4">
      <div>
        <%= form.label :title, "TÃ­tulo", class: "block text-gray-700 font-bold text-lg mb-2" %>
        <%= form.text_field :title, class: "w-1/3 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= form.label :text, "Texto", class: "block text-gray-700 font-bold text-lg mb-2" %>
        <%= form.text_area :text, size: "70x5", class: "w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>
    </div>

    <div class="flex justify-between items-center mb-4">
      <%= link_to "Cancelar", notes_path, class: "bg-gray-200 text-gray-800 py-2 px-4 rounded-md hover:bg-gray-300" %>
      <%= form.submit "Salvar", class: "bg-indigo-500 text-white py-3 px-6 rounded-md hover:bg-indigo-600" %>
    </div>
  <% end %>
</div>

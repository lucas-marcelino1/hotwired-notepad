<%= turbo_frame_tag note do %>
  <div class="container mx-auto p-4">
    <div class="bg-gray-100 shadow-md rounded-lg p-6 mb-4">
      <h2 class="text-3xl font-bold text-gray-800 mb-4 border-b-2 border-gray-300 pb-2 inline-block"><%= note.title %></h2>
      <p class="text-gray-600 text-lg"><%= note.text %></p>
    </div>

    <div class="flex space-x-2">
      <%= button_to "Delete", note_path(note), method: :delete, class: "bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50" %>
      <%= link_to "Edit", edit_note_path(note), class: "bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
    </div>
  </div>
<% end %>

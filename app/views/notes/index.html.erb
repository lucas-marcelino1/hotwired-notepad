<div class="container mx-auto p-4">
  <h1 class="text-center text-3xl font-bold mb-6">Notepad RoR</h1>

  <%= turbo_frame_tag "new_note" do %>
    <div class="text-center mb-4">
      <%= link_to "New Note", new_note_path, class: "inline-block bg-indigo-500 text-white p-2 rounded-md hover:bg-indigo-600" %>
    </div>
  <% end %>

  <%= turbo_frame_tag "notes" do %>
    <%= render @notes %>
  <% end %>
</div>
